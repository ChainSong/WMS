@Url.TreeViewResource()

<fieldset>
    <legend>区域管理</legend>

    <table>
        <tr>
            <td style="width: 30%">
                <div id="menuContent" class="menuContent">
                    <ul id="treeDemo" class="ztree">
                    </ul>
                </div>
            </td>
            <td>
                @using (Html.BeginForm())
                {
                    <input type="hidden" id="regionId" name="regionId" />
                    <table border="0" style="height: 100%">
                        <tr>
                            <td class="TableColumnTitle" style="width: 20%">添加到
                            </td>
                            <td colspan="3">
                                <span id="ClickedRegion">全国</span>
                            </td>
                        </tr>
                        <tr>
                            <td class="TableColumnTitle" style="width: 20%">名称
                            </td>
                            <td>
                                <input type="text" id='RegionName' name='RegionName' />
                            </td>
                            <td class="TableColumnTitle" style="width: 20%">级别
                            </td>
                            <td>
                                <input type="text" id='Grade' name='Grade' />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="6" style="text-align:center;">
                                <input type="submit" id="submitButton" value='  添加  '  />
                            </td>
                        </tr>
                    </table>
                }
            </td>
        </tr>
    </table>
</fieldset>
