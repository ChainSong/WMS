        </legend>
        <div id="tables" style="overflow-x: scroll; min-height: 180px;">
            <table id="resultTable" style="width: 130%; table-layout: fixed;">
                <thead>
                    <tr>
                        @foreach (System.Data.DataRow dr in project.Rows)
                        {
                            if (@dr["ForView"].ToString() == "1")
                            {
                                if (@dr["DisplayName"].ToString() == "BU" || @dr["DisplayName"].ToString() == "Size" || @dr["DisplayName"].ToString() == "类别" ||
                                    @dr["DisplayName"].ToString() == "Price" || @dr["DisplayName"].ToString() == "安全扣" || @dr["DisplayName"].ToString() == "库区" ||
                                    @dr["DisplayName"].ToString() == "箱单号")
                                {
