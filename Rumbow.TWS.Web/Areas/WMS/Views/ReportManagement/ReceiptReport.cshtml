                        {
                            <tr style="line-height:12px;">
                                @foreach (System.Data.DataRow dr in project.Rows)
                                {
                                    if (@dr["ForView"].ToString() == "1")
                                    {
                                    <td>
                                        @{
                                            var o = typeof(Runbow.TWS.Entity.ReportReceiptReport).GetProperty(dr["Columns"].ToString()).GetValue(item);
                                            if (@o == null)
                                            {
                                            }
                                            else
                                            {
                                                @o.ToString()
                                            }
                                        }
                                    </td>
                                    }
                                }
                            </tr>
