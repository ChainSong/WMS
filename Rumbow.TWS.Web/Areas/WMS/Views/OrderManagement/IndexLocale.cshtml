                    var Str19List = (IEnumerable<SelectListItem>)ViewBag.Str19List;
                    var WarehouseList = (IEnumerable<SelectListItem>)ViewBag.WarehouseList;
                    var WorkStation = (IEnumerable<SelectListItem>)ViewBag.WorkStation;
