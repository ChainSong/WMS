<style>
    .bcTarget {
        font-size: 16px;
    }
</style>
<script type="text/javascript">
    function BarcodeC(obj, data) {
        $(obj).empty().barcode(data, "code128", { barWidth: 1, barHeight: 50, showHRI: false });
    }
    $(function () {
        $.each($(".bcTarget"), function (a, b) {
            BarcodeC(b, $(b).html());
        });
    })
</script>

