<link rel="stylesheet" href="~/Assets/bootstrap-3.3.4-dist/bootstrap.min.css">
@using Runbow.TWS.Common;
<script src="../../../../Scripts/System/Layer/layer.js"></script>
<link href="~/Assets/Layui/layui/css/layui.css" rel="stylesheet" />
<script src="~/Assets/Layui/layui/layui.js"></script>
@model Runbow.TWS.Web.Areas.WMS.Models.UnitAndSpecifications.UnitAndSpecificationsModel
@using (Html.BeginForm())
{
    <fieldset>
        <legend>模板查询条件</legend>
        <table>
            <tr>
                @{
                    //var CustomerList = (IEnumerable<SelectListItem>)ViewBag.CustomerList;
                }
                <td class="TableColumnTitle">
                    <label>客户</label>
                </td>
                <td style="width: 16%;">
                    @Html.DropDownListFor(m => m.unitAndSpecificationsInfo.CustomerID, Model.CustomerItems, "==请选择==", new { @class = "form-control" })
                </td>
            </tr>
        </table>
        <div class="actionButtonDiv">
            <input type="submit" value="查询" id="submitButton" class="btn btn-success" />
            <input type="button" value="新增" id="AddButton" class="btn btn-success" />
        </div>
    </fieldset>
    <fieldset>
        <legend>
            模板列表
            @if (Model.unitAndSpecificationsInfos != null && Model.unitAndSpecificationsInfos.Any())
            {
                @Html.Raw("(" + Model.unitAndSpecificationsInfos.Count() + ")");
            }
        </legend>
        <table id="resultTable">
            <thead>
                <tr>
                    <th style="width:60px">操作</th>
                    <th>客户</th>
                    <th>单位</th>
                    <th>规格</th>
                </tr>
            </thead>
            <tbody id="editTable">

                @if (Model.unitAndSpecificationsInfos != null && Model.unitAndSpecificationsInfos.Any())
                {
                    foreach (var item in Model.unitAndSpecificationsInfos)
                    {
                        <tr>
                            <td>
                                <label style="cursor: pointer;" data-id="@item.ID" class="btn btn-primary btn-xs delete">删除</label>
                            </td>
                            <td>
                                @item.CustomerName
                            </td>
                            <td>
                                @item.Unit
                            </td>
                            <td>
                                @item.Specifications
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </fieldset>
}
