@{
    Layout = null;
    ViewBag.Title = "绑定托盘移动";
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=gb2312">
    <meta name="viewport" content="initial-scale=1.0,width=device-width" />
    <script src="~/Assets/JS/jquery-1.11.3.min.js"></script>
    <script src="~/Assets/JS/Layer/layer.js"></script>
    <link href="~/Assets/CSS/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            width: 100%;
        }
    </style>
</head>
<body>
    @Html.Hidden("CustomerID", (object)ViewBag.CustomerID)
    @Html.Hidden("WareHouseName", (object)ViewBag.WareHouseName)
    @Html.Hidden("WareHouseID", (object)ViewBag.WareHouseID)
    <div class="container body-content" id="traymoveDiv">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        绑定托盘移动
                    </h3>
                </div>
                <div class="panel-body">
                    <table id="resultTable" style="width:100%;font-size:medium">
                        <tr>
                            <td style="text-align:right;font-weight:bold;font-size:24px">
                                <audio src="~/audio/1.mp3" id="Audio">
                                    您的浏览器不支持 audio 标签。
                                </audio>
                                <audio src="~/audio/success.mp3" id="SuccessAudio">
                                    您的浏览器不支持 audio 标签。
                                </audio>
                            </td>
                        </tr>
                        <tr>
                            <td>托盘条码</td>
                            <td>
                                <input type="text" class="form-control" id="txtTrayNum" style="width:220px" onkeydown="ScanTN(event)" />
                            </td>
                        </tr>
                        <tr>
                            <td>库位条码</td>
                            <td>
                                <input type="text" class="form-control" id="txtLocation" style="width:220px;" onkeydown="ScanLo(event)" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script>
        $('#txtTrayNum').focus();
        $('#txtTrayNum').select();
        //托盘扫描
        function ScanTN(event) {
            if (event.keyCode == 13) {
                if ($('#txtTrayNum').val() == "") {
                    $("#Audio")[0].play();
                    layer.alert("托盘号不能为空！", {
                        skin: 'layui-layer-lan', //样式类名
                        icon: 2,
                        btn: ['确定'], //单击按钮
                        btn1: function (index, layero) {
                            $('#txtTrayNum').focus();
                            $('#txtTrayNum').select();
                        }
                    });
                    return false;
                }

                if (CheckTrayNum()) {

                }

            }
        }

        //检查托盘号
        function CheckTrayNum() {
            var bo = false;
            $.ajax({
                url: '/Receipt/CheckTrayNumBindTray',
                type: 'post',
                async: false,
                data: {
                    TrayNum: $('#txtTrayNum').val(),
                    CustomerID: $('#CustomerID').val(),
                    WareHouseName: $('#WareHouseName').val(),
                    WareHouseID: $('#WareHouseID').val(),
                    Status: 1
                },
                dataType: 'json',
                success: function (data) {
                    if (data.data == 1) {
                        bo = true;
                        $("#SuccessAudio")[0].play();
                        $('#txtLocation').focus();
                        $('#txtLocation').select();
                    }
                    else {
                        $("#Audio")[0].play();
                        layer.alert(data.msg, {
                            skin: 'layui-layer-lan', //样式类名
                            icon: 2,
                            btn: ['确定'], //单击按钮
                            btn1: function (index, layero) {
                                $('#txtTrayNum').focus();
                                $('#txtTrayNum').select();
                            }
                        });
                    }
                }
            })
            return bo;
        }

        //库位扫描
        function ScanLo(event) {
            if (event.keyCode == 13) {
                if ($('#txtLocation').val() == "") {
                    $("#Audio")[0].play();
                    layer.alert("库位号不能为空！", {
                        skin: 'layui-layer-lan', //样式类名
                        icon: 2,
                        btn: ['确定'], //单击按钮
                        btn1: function (index, layero) {
                            $('#txtLocation').focus();
                            $('#txtLocation').select();
                        }
                    });
                    return false;
                }
                if (CheckLocation()) {

                }
            }
        }
        //检查库位
        function CheckLocation() {
            var bo = false;
            $.ajax({
                url: '/Receipt/CheckLocationBindTray',
                type: 'post',
                async: false,
                data: {
                    TrayNum: $('#txtTrayNum').val(),
                    Location: $('#txtLocation').val(),
                    CustomerID: $('#CustomerID').val(),
                    WareHouseName: $('#WareHouseName').val(),
                    WareHouseID: $('#WareHouseID').val()
                },
                dataType: 'json',
                success: function (data) {
                    if (data.data == 1) {
                        bo = true;
                        $("#SuccessAudio")[0].play();
                        $('#txtTrayNum').focus();
                        $('#txtTrayNum').select();
                    }
                    else {
                        $("#Audio")[0].play();
                        layer.alert(data.msg, {
                            skin: 'layui-layer-lan', //样式类名
                            icon: 2,
                            btn: ['确定'], //单击按钮
                            btn1: function (index, layero) {
                                $('#txtLocation').focus();
                                $('#txtLocation').select();
                            }
                        });
                    }
                }
            })
            return bo;
        }
    </script>
</body>
</html>
