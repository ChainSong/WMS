@{
    Layout = null;
    ViewBag.Title = "托盘绑定";
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=gb2312">
    <meta name="viewport" content="initial-scale=1.0,width=device-width" />
    <script src="~/Assets/JS/jquery-1.11.3.min.js"></script>
    <script src="~/Assets/JS/Layer/layer.js"></script>
    <link href="~/Assets/CSS/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            width: 100%;
        }
    </style>
</head>
<body>
    @Html.Hidden("CustomerID", (object)ViewBag.CustomerID)
    @Html.Hidden("WareHouseName", (object)ViewBag.WareHouseName)
    @Html.Hidden("WareHouseID", (object)ViewBag.WareHouseID)
    <div class="container body-content" id="trayDiv">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        托盘绑定
                    </h3>
                </div>
                <div class="panel-body">
                    <table id="resultTable" style="width:100%;font-size:medium;">
                        <tr>
                            <td style="text-align:right;font-weight:bold;font-size:24px">
                                <audio src="~/audio/1.mp3" id="Audio">
                                    您的浏览器不支持 audio 标签。
                                </audio>
                                <audio src="~/audio/success.mp3" id="SuccessAudio">
                                    您的浏览器不支持 audio 标签。
                                </audio>
                            </td>
                        </tr>
                        <tr>
                            <td>托盘条码</td>
                            <td>
                                <input type="text" class="form-control" id="txtTrayNum" style="width:220px" onkeydown="ScanTN(event)" />
                            </td>
                        </tr>
                        <tr style="height:10px">
                            <td>箱号条码</td>
                            <td>
                                <input type="text" class="form-control" id="txtBoxNum" style="width:220px;" onkeydown="ScanBN(event)" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-xs-12">
                        <label for="" style="color:#d200ff;margin-left:15px;font-size:30px;">已扫箱数：<span id="txtNum">0</span></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $("#txtTrayNum").focus();

        $("#txtTrayNum").on('focus', function () {
            $("#txtTrayNum").select();
        })

        //托盘扫描
        function ScanTN(event) {
            if (event.keyCode == 13) {
                $('#txtNum').text(0)

                if ($('#txtTrayNum').val() == "") {
                    $("#Audio")[0].play();
                    layer.alert("托盘不能为空！", { icon: 2 });
                    return false;
                }
                if (CheckTrayNum()) {

                }
                else {

                }
                //layer.alert($(event.target).val());
            }
        }
        //检查托盘号
        function CheckTrayNum() {
            var bo = false;
            $.ajax({
                url: '/Receipt/CheckTrayNumBindTray',
                type: 'post',
                async: false,
                data: {
                    TrayNum: $('#txtTrayNum').val(),
                    CustomerID: $('#CustomerID').val(),
                    WareHouseName: $('#WareHouseName').val(),
                    WareHouseID: $('#WareHouseID').val()
                },
                dataType: 'json',
                success: function (data) {
                    if (data.data == 1) {
                        bo = true;
                        $("#SuccessAudio")[0].play();
                        $('#txtBoxNum').focus();
                        $('#txtBoxNum').select();
                    }
                    else {
                        $("#Audio")[0].play();
                        layer.alert(data.msg, {
                            skin: 'layui-layer-lan', //样式类名
                            icon: 2,
                            btn: ['确定'], //单击按钮
                            btn1: function (index, layero) {
                                $('#txtTrayNum').focus();
                                $('#txtTrayNum').select();
                            }
                        });
                    }
                }
            })
            return bo;
        }

        //箱号扫描
        function ScanBN(event) {
            if (event.keyCode == 13) {
                if ($('#txtTrayNum').val() == "") {
                    $("#Audio")[0].play();
                    layer.alert("托盘不能为空！", { icon: 2 });
                    return false;
                }
                if ($('#txtBoxNum').val() == "") {
                    $("#Audio")[0].play();
                    layer.alert("箱号不能为空！", { icon: 2 });
                    return false;
                }
                //检查箱号
                if (CheckBoxNum()) {
                    var num = $('#txtNum').text();
                    var result = parseInt(num) + 1;
                    $('#txtNum').text(result);
                }
            }
        }
        //检查箱号
        function CheckBoxNum() {
            var bo = false;
            $.ajax({
                url: '/Receipt/CheckBoxNumBindTray',
                type: 'post',
                async: false,
                data: {
                    TrayNum: $('#txtTrayNum').val(),
                    BoxNum: $('#txtBoxNum').val(),
                    CustomerID: $('#CustomerID').val(),
                    WareHouseName: $('#WareHouseName').val(),
                    WareHouseID: $('#WareHouseID').val()
                },
                dataType: 'json',
                success: function (data) {
                    if (data.data == 1) {
                        bo = true;
                        $("#SuccessAudio")[0].play();
                        $('#txtBoxNum').focus();
                        $('#txtBoxNum').select();
                    }
                    else {
                        $("#Audio")[0].play();
                        layer.alert(data.msg, {
                            skin: 'layui-layer-lan', //样式类名
                            icon: 2,
                            btn: ['确定'], //单击按钮
                            btn1: function (index, layero) {
                                $('#txtBoxNum').focus();
                                $('#txtBoxNum').select();
                            }
                        });
                    }
                }
            })
            return bo;
        }
    </script>
</body>
</html>
