@model IEnumerable<Runbow.TWS.Entity.Menu>
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=gb2312">
    <meta name="viewport" content="initial-scale=1.0,width=device-width" />
    <link href="~/Assets/CSS/bootstrap.min.css" rel="stylesheet" />
    <title>菜单</title>
    <script type="text/javascript">
        function dirUrl(url) {
            //alert(url);
            window.location.href = url;
        }
        function tdback() {
            history.back(-1);
        }
        //function dirPick() {
        //    window.location.href = "/Order/";
        //}
        //function dirConfirm() {
        //    window.location.href = "/Order/Confirm/";
        //}
    </script>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        table tr input {
            font-size: 16px;
            outline: none;
            border: none;
            border-radius: 15px;
            color: black;
            line-height: 30px;
            /*margin-bottom: 50px;*/
        }

        table tr:nth-child(n+2) img {
            width: 62px;
        }

        table tr:nth-child(n+2) td {
            padding-top: 30px;
        }

        table tr div {
            margin: 0 auto;
            background: #428BCA;
            width: 80px;
            height: 80px;
            border-radius: 10px;
        }

        table tr:nth-child(n+2) input {
            border-radius: 0;
            background: none;
        }
    </style>
</head>
<body topmargin="0" leftmargin="0" rightmargin="0" bottommargin="0">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                <img src="~/img/right.png" style="width: 15px;height: 21px;vertical-align: middle;" />功能选择
            </h3>
        </div>
        <div class="panel-body">
            <table style="text-align: center; height: 450px; width: 100%">
                @*<tr>

                    <td style="text-align: left; font-weight: bold;    padding: 10px 5px;color: #428BCA;line-height: 40px;" onclick="tdback()">
                        <img src="~/img/right.png" style="width: 15px;height: 21px;vertical-align: middle;" />返回
                    </td>
                </tr>*@
                @using (Html.BeginForm())
                {
                    var CustomerID = ViewBag.CustomerID;
                    var WareHouseName = ViewBag.WareHouseName;
                    var WareHouseID = ViewBag.WareHouseID;
                    var i = 0;
                    var menuList = Model.ToList();
                    while (i < menuList.Count)
                    {
                        var menu1 = menuList[i];
                        var dirUrl1 = menu1.Link + "?CustomerID=" + CustomerID + "&WareHouseName=" + WareHouseName + "&WareHouseID=" + WareHouseID;
                        Runbow.TWS.Entity.Menu menu2 = null;
                        string dirUrl2 = string.Empty;
                        i++;
                        if (i < menuList.Count)
                        {
                            menu2 = menuList[i];
                            dirUrl2 = menu2.Link + "?CustomerID=" + CustomerID + "&WareHouseName=" + WareHouseName + "&WareHouseID=" + WareHouseID;
                        }
                        <tr>
                            <td>
                                <div style="margin-top:-30px">
                                    <img src="@menu1.Glyphicon" style="margin-top: 9px;width: 60px;height: 60px" onclick="dirUrl('@dirUrl1')">
                                </div>
                                <input id="@menu1.ID" type="button" value="@menu1.Name" style="width:100%;background-color:#ffffff" onclick="dirUrl('@dirUrl1')" />
                            </td>
                            <td>
                                @if (menu2 != null)
                                {

                                    <div style="margin-top:-30px">
                                        <img src="@menu2.Glyphicon" style="margin-top: 9px;width: 60px;height: 60px" onclick="dirUrl('@dirUrl2')">
                                    </div>

                                    <input id="@menu2.ID" type="button" value="@menu2.Name" style="width:100%;background-color:#ffffff" onclick="dirUrl('@dirUrl2')" />
                                }
                            </td>
                        </tr>
                        i++;
                    }


                }

                @*tr><td><input id="sumbit" type="button" value="理货" style="width:100%;height:120px" /></td><td><input id="receiving" type="button" value="上架" style="width:100%;height:120px" onclick="dirRec()" /></td></tr>
            <tr><td><input id="pick" type="button" value="捡货" style="width:100%;height:120px" onclick="dirPick()" /></td><td><input id="repick" type="button" value="复检" style="width:100%;height:120px" onclick="dirConfirm()" /></td></tr>
            <tr><td><input id="package" type="button" value="包装" style="width:100%;height:120px" /></td><td><input id="shipment" type="button" value="出库" style="width:100%;height:120px" /></td></tr>*@
            </table>
        </div>
    </div>

  

</body>
</html>
<script src="~/js/login.js"></script>
